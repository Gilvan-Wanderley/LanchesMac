@model CarrinhoCompraViewModel;

@{
    ViewData["Title"] = "Carrinho de Compras";
}

<div class="container">
    <div class="row">
        <div >
            <img src="~/images/Full-Cart-icon.png" width="30" height="35"/>
            <div><h4>Seu carrinho de compras: </h4></div>     
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Pre√ßo</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-center">@item.Lanche.Nome</td>
                        <td class="text-center">@item.Lanche.Preco.ToString("c")</td>
                        <td class="text-center">@((item.Lanche.Preco*item.Quantidade).ToString("c"))</td>
                        <td class="text-center">                        
                            <a asp-controller="CarrinhoCompra" 
                               asp-action="RemoverItemDoCarrinhoCompra"
                               asp-route-lancheId="@item.Lanche.LancheId">
                               <img src="~/images/remove.ico" 
                                    width="20px" 
                                    height="20px"/>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total: </td>
                    <td class="text-right">@Model.CarrinhoCOmpraTotal.ToString("c")</td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-success"
                 asp-controller="Pedido"
                 asp-action="Checkout">Encerrar Pedido</a>
                <a class="btn btn-primary"
                 asp-controller="Lanche"
                 asp-action="List">Continuar Comprando</a>
            </div>
        </div>
    </div>
</div>